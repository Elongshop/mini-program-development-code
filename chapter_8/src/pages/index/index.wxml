<view class="container">
  <navigation-tab bind:change-tab="onChangeTab"></navigation-tab>

  <view class="content recommend-tab"
        hidden="{{currentTabId !== 'recommend'}}">

    <!--    推荐歌单-->
    <view class="recommend-panel">
      <view class="top-title">
        <image src="./images/calendar_icon.png"></image>
        <text class="recommend-title">推荐歌单</text>
        <view class="placeholder"></view>
      </view>
      <view class="card-list">
        <navigator wx:for="{{playlists}}"
                   wx:for-item="playlist"
                   wx:key="index"
                   class="card"
                   url="/pages/playlist/index?playlistId={{playlist.id}}">
          <playlist-card
                  playlist="{{playlist}}">
          </playlist-card>
        </navigator>
      </view>
    </view>

    <!--    最新音乐-->
    <view class="recommend-panel">
      <view class="top-title">
        <image src="./images/new_song_icon.png"></image>
        <text class="recommend-title">最新音乐</text>
        <view class="placeholder"></view>
      </view>
      <view class="card-list">
        <navigator wx:for="{{newSongList}}"
                   wx:for-item="song"
                   wx:key="index"
                   class="card"
                   url="/pages/play/index?songId={{song.id}}">
          <song-card song="{{song}}">
          </song-card>
        </navigator>
      </view>
    </view>

    <!--    推荐MV-->
    <view class="recommend-panel">
      <view class="top-title">
        <image src="./images/mv_icon.png"></image>
        <text class="recommend-title">推荐MV</text>
        <view class="placeholder"></view>
      </view>
      <view class="card-list">
        <navigator wx:for="{{mvList}}"
                   wx:for-item="mv"
                   wx:key="index"
                   class="mv-card"
                   url="/pages/mv/index?id={{mv.id}}">
          <mv-card mv="{{mv}}">
          </mv-card>
        </navigator>
      </view>
    </view>

    <!--    主播电台-->
    <view class="recommend-panel">
      <view class="top-title">
        <image src="./images/dj_icon.png"></image>
        <text class="recommend-title">主播电台</text>
        <view class="placeholder"></view>
      </view>
      <view class="card-list">
        <navigator wx:for="{{djList}}"
                   wx:for-item="radio"
                   wx:key="index"
                   class="card"
                   url="/pages/radio/detail/index?radioId={{radio.program.radio.id}}">
          <radio-card radio="{{radio}}">
          </radio-card>
        </navigator>
      </view>
    </view>
  </view>

  <view class="content playlist-tab"
        hidden="{{currentTabId !== 'playlist'}}">
    <playlist-tab></playlist-tab>
  </view>

  <view class="content radio-tab"
        hidden="{{currentTabId !== 'radio'}}">
    <radio-tab></radio-tab>
  </view>

  <view class="content ranking-tab"
        hidden="{{currentTabId !== 'ranking'}}">
    <ranking-tab></ranking-tab>
  </view>
</view>
