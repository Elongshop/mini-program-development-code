<!--index.wxml-->
<view class="container">
  <view class="game-info-panel">
    <view>2048</view>
    <view bindtap="startGame">开始游戏!</view>
  </view>

  <view class="game-board"
        bindtouchstart="onTouchStart"
        bindtouchmove="onTouchMove"
        bindtouchend="onTouchEnd">
    <view class="row"
          wx:for="{{matrix}}"
          wx:for-item="row"
          wx:key="index">
      <view class="cell"
            wx:for="{{row}}"
            wx:for-item="cell"
            wx:key="index">
        <view class="text cell-{{cell}}" wx:if="{{cell !== 0}}">{{cell}}</view>
      </view>
    </view>
  </view>

  <view class="score-panel">
    <text>历史最高分: {{highestScore}}</text>
    <text>本次层级: {{currentScore}}</text>
  </view>
</view>
